<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Category View" option="View">
      <message>
        <![CDATA[View containing a wall of filtered thumbnails of a specific category]]>
      </message>
    </layout>
    <fields name="request">
        <fieldset name="request" >
            <field name="id"
                   type="sql"
                   query="SELECT `id`, `title` FROM #__joomgallery_categories ORDER BY `id`"
                   key_field="id"
                   value_field="title"
                   label="COM_JOOMGALLERY_FILTER_BY_CATEGORY"
                   require="true" >
            </field>

            <field name="tag"
                   type="sql"
                   query="SELECT `id`, `title` FROM #__joomgallery_tags ORDER BY `id`"
                   key_field="id"
                   value_field="title"
                   multiple="true"
                   label="COM_JOOMGALLERY_FILTER_BY_TAGS"
                   require="true" >
            </field>
        </fieldset>
    </fields>
    <fields name="params">
        <fieldset name="advanced" label="COM_JOOMGALLERY_MENU_CATEGORY_VIEW_OPTIONS" addfieldprefix="Joomgallery\Component\Joomgallery\Administrator\Field">
            <field
                name="jg_category_view_class"
                type="jglist"
                useglobal="true"
                label="COM_JOOMGALLERY_MENU_CATEGORY_VIEW_CLASS"
                description="COM_JOOMGALLERY_MENU_CATEGORY_VIEW_CLASS_NOTE_DESC"
                parentclass="stack span-2-inline"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="columns">COM_JOOMGALLERY_MENU_CATEGORY_VIEW_GRID</option>
                <option value="masonry">COM_JOOMGALLERY_MENU_CATEGORY_VIEW_MASONRY</option>
                <option value="justified">COM_JOOMGALLERY_MENU_CATEGORY_VIEW_JUSTIFIED</option>
            </field>
            <field
                name="jg_category_view_num_columns"
                type="jglist"
                useglobal="true"
                label="COM_JOOMGALLERY_MENU_NUM_COLUMNS_LABEL"
                description="COM_JOOMGALLERY_MENU_NUM_COLUMNS_DESC"
                parentclass="stack span-2-inline"
                validate="options"
                showon="jg_category_view_class:-1[OR]jg_category_view_class:columns[OR]jg_category_view_class:masonry"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </field>
            <field
                name="jg_category_view_image_class"
                type="jglist"
                useglobal="true"
                label="COM_JOOMGALLERY_MENU_CATEGORY_IMAGE_CLASS"
                description="COM_JOOMGALLERY_MENU_CATEGORY_IMAGE_CLASS_NOTE_DESC"
                parentclass="stack span-2-inline"
                validate="options"
                showon="jg_category_view_class:-1[OR]jg_category_view_class:columns[OR]jg_category_view_class:masonry"
                >
                <option value="none">JNONE</option>
                <option value="boxed">COM_JOOMGALLERY_MENU_CATEGORY_IMAGE_CLASS_BOXED</option>
            </field>
            <field
                name="jg_category_view_justified_height"
                type="jgnumber"
                useglobal="true"
                min="1"
                max="9999"
                step="1"
                parentclass="stack span-2-inline"
                label="COM_JOOMGALLERY_MENU_JUSTIFIED_HEIGHT"
                description="COM_JOOMGALLERY_MENU_JUSTIFIED_HEIGHT_NOTE_DESC"
                filter="int"
                showon="jg_category_view_class:-1[OR]jg_category_view_class:justified"
            />
            <field
                name="jg_category_view_justified_gap"
                type="jgnumber"
                useglobal="true"
                min="0"
                max="999"
                step="1"
                parentclass="stack span-2-inline"
                label="COM_JOOMGALLERY_MENU_JUSTIFIED_GAP"
                description="COM_JOOMGALLERY_MENU_JUSTIFIED_GAP_NOTE_DESC"
                filter="int"
                showon="jg_category_view_class:-1[OR]jg_category_view_class:justified"
            />
            <field
                label="COM_JOOMGALLERY_CONFIG_CATEGORY_VIEW_NUMBERS"
                type="spacer"
                name="spacer2"
                hr="false"
                >
            </field>
            <field
                name="jg_category_view_numb_subcategories"
                type="jgnumber"
                useglobal="true"
                parentclass="span-3"
                min="1"
                max="999"
                step="1"
                label="COM_JOOMGALLERY_CONFIG_NUMB_SUBCATEGORIES"
                description="COM_JOOMGALLERY_CONFIG_NUMB_SUBCATEGORIES_DESC"
                filter="int"
            />
            <field
                name="jg_category_view_numb_images"
                type="jgnumber"
                useglobal="true"
                parentclass="span-3"
                min="1"
                max="9999"
                step="1"
                label="COM_JOOMGALLERY_CONFIG_NUMB_IMAGES"
                description="COM_JOOMGALLERY_CONFIG_NUMB_IMAGES_DESC"
                filter="int"
            />
            <field
                label="COM_JOOMGALLERY_CONFIG_IMAGE_INFORMATION"
                type="spacer"
                name="spacer3"
                hr="false"
                >
            </field>
            <field
                name="jg_category_view_show_title"
                groupByFieldset="false"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="JGLOBAL_TITLE"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="jg_category_view_caption_align"
                type="jglist"
                useglobal="true"
                parentclass="span-3"
                label="COM_JOOMGALLERY_MENU_CATEGORY_VIEW_ALIGNMENT"
                description="COM_JOOMGALLERY_MENU_CATEGORY_VIEW_ALIGNMENT_NOTE_DESC"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="none">JNONE</option>
                <option value="left">JGLOBAL_LEFT</option>
                <option value="center">JGLOBAL_CENTER</option>
                <option value="right">JGLOBAL_RIGHT</option>
            </field>
            <field
                name="jg_category_view_show_description"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="JGLOBAL_DESCRIPTION"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="jg_category_view_show_imgdate"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="COM_JOOMGALLERY_DATE"
                description="COM_JOOMGALLERY_DATE_DESC"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="jg_category_view_show_imgauthor"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="JAUTHOR"
                description="COM_JOOMGALLERY_FIELDS_AUTHOR_DESC"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="jg_category_view_show_tags"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="COM_JOOMGALLERY_TAGS"
                validate="options"
                >
                <option value="-1">JGLOBAL_USE_GLOBAL_VALUE</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
</metadata>